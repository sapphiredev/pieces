{
	"name": "@sapphire/pieces",
	"version": "1.0.0",
	"description": "Sapphire's piece loader.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": "@sapphire",
	"license": "MIT",
	"private": false,
	"scripts": {
		"prepublishOnly": "yarn build",
		"lint": "eslint src --ext ts --fix",
		"format": "prettier --write src/**/*.ts",
		"docs": "typedoc",
		"update": "yarn upgrade-interactive --latest",
		"build": "tsc -b src",
		"clean": "tsc -b src --clean",
		"watch": "tsc -b src -w",
		"sversion": "standard-version",
		"commit": "git-cz",
		"cz": "git-cz"
	},
	"dependencies": {
		"@discordjs/collection": "^0.1.6"
	},
	"devDependencies": {
		"@commitlint/cli": "^9.1.2",
		"@commitlint/config-conventional": "^9.1.2",
		"@sapphire/eslint-config": "github:sapphire-project/utilities#build-eslint-config",
		"@sapphire/ts-config": "github:sapphire-project/utilities#build-tsconfig",
		"@types/node": "^14.6.0",
		"cz-conventional-changelog": "^3.2.0",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"prettier": "^2.1.1",
		"pretty-quick": "^3.0.0",
		"standard-version": "^9.0.0",
		"typedoc": "^0.19.0",
		"typedoc-plugin-nojekyll": "^1.0.1",
		"typescript": "^4.0.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphire-project/pieces.git"
	},
	"files": [
		"dist",
		"!dist/tsconfig.tsbuildinfo"
	],
	"engines": {
		"node": ">=12",
		"npm": ">=6"
	},
	"keywords": [
		"discordjs",
		"bot",
		"typescript",
		"ts",
		"yarn",
		"discord",
		"sapphire"
	],
	"bugs": {
		"url": "https://github.com/sapphire-project/pieces/issues"
	},
	"homepage": "https://sapphire-project.github.io/pieces",
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn pretty-quick --staged && yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"resolutions": {
		"acorn": "^7.3.1",
		"minimist": "^1.2.2",
		"kind-of": "^6.0.3",
		"dot-prop": "^5.2.0"
	}
}
